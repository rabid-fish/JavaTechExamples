<?xml version="1.0" encoding="UTF-8"?>
<flow 
	xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/webflow
		http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd
">
	
	<on-start>
		<set name="conversationScope.init" value="contactComplexService.initializeTestData()" />
		<set name="conversationScope.init" value="carService.initializeTestData()" />
	</on-start>

	<view-state 
		id="carSelect" 
		view="/WEB-INF/webflow/ex4/carSelect"
		model="carSelectorCommand"
	>
		<on-entry>
			<set name="flowScope.contactList" value="contactComplexService.list()" />
			<set name="flowScope.carList" value="contactComplexService.list()" />
			<set name="flowScope.carSelectorCommand" value="carSelectorService.initializeCarSelectorCommand()" />
		</on-entry>
		<transition on="submit" to="carResults" />
	</view-state>
	
	<view-state 
		id="carResults" 
		view="/WEB-INF/webflow/ex4/carResults" 
	>
		<transition on="submit" to="carSelect" />
	</view-state>
	
</flow>
